{
  "name": "i2djs",
  "version": "3.4.0",
  "description": "Integrated-2d, framework for 2D graphics rendering for SVG/Canvas/WebGl context",
  "module": "./src/main.js",
  "main": "./dist/i2d.js",
  "sideEffects": false,
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "dev": "rollup -wm -c rollup.config.js",
    "build": "rm -rf ./dist/ && rollup -c rollup.config.js",
    "lint": "eslint src/**",
    "lint-fix": "eslint --cache --fix src/**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/I2Djs/I2D.git"
  },
  "files": [
    "dist",
    "src",
    "examples/canvas",
    "examples/data",
    "examples/svg",
    "examples/webGL"
  ],
  "keywords": [
    "SVG",
    "Canvas",
    "DataJoin",
    "Data Visualization",
    "Gaming",
    "Visualization",
    "2D Graphics",
    "Graphics",
    "Animation",
    "Virtual Dom",
    "Bitmap",
    "Scalable Vector Graphics",
    "pixel",
    "Rendering",
    "Integrated 2D"
  ],
  "author": "Narayana Swamy",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/i2djs/I2D/issues"
  },
  "homepage": "https://github.com/i2djs/I2D#readme",
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "eslint-config-mourner": "^3.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.10",
    "prettier": "2.0.5",
    "rollup": "^1.17.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.0"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.2.0",
    "earcut": "^2.2.2",
    "stackblur-canvas": "^2.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{html,css,md}": [
      "prettier --write"
    ]
  }
}
